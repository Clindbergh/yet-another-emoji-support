<idea-plugin>
    <id>com.github.shiraji.yaemoji</id>
    <name>Yet Another Emoji support</name>
    <vendor email="isogai.shiraji@gmail.com" url="https://github.com/shiraji">Shiraji</vendor>

    <description><![CDATA[
    Yet another emoji support plugin yay!!!!!!!!!!!!!
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends optional="true" config-file="kotlin.xml">org.jetbrains.kotlin</depends>
    <depends optional="true" config-file="python.xml">com.intellij.modules.python</depends>
    <depends optional="true" config-file="ruby.xml">com.intellij.modules.ruby</depends>

    <extensions defaultExtensionNs="com.intellij">
        <preloadingActivity implementation="com.github.shiraji.yaemoji.action.EmojiPreloadingActivity"/>

        <completion.contributor language="any"
                                implementationClass="com.github.shiraji.yaemoji.contributor.EmojiCompletionContributor"/>
        <completion.contributor language="JAVA"
                                implementationClass="com.github.shiraji.yaemoji.contributor.JavaEmojiCompletionContributor"/>
        <completion.contributor language="XML"
                                implementationClass="com.github.shiraji.yaemoji.contributor.XMLEmojiCompletionContributor"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>